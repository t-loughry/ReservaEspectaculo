@model IEnumerable<ReservaEspectaculo.Models.Reserva>

@{
    ViewData["Title"] = "MostrarRecaudacion";
}

<h1>Recaudación para el mes de @ViewBag.Mes</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Funcion.Pelicula.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadButacas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Funcion.Sala.TipoSala.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recaudacion)
            </th>


        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

    @if(item.Recaudacion > 0)
    {    
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Funcion.Pelicula.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadButacas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcion.Sala.TipoSala.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recaudacion)
            </td>

        </tr>
    }
}
    </tbody>
</table>

<a asp-action="Index"><i class="fas fa-undo"></i></a>
