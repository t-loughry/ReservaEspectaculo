@model ReservaEspectaculo.ViewModels.verBalanceVM

@{
    ViewData["Title"] = "verBalance";
}

<h1>Recaudación</h1>
<div class="row">
    <div class="column" style="margin-right:10px">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="~/img/default.png" alt="Card image cap">
            <div class="card-body">
                <center>
                    <h4> @Html.DisplayFor(model => model.Pelicula) </h4>
                    <p>
                        @Html.DisplayNameFor(model => model.Desde):
                        @Html.DisplayFor(model => model.Desde)
                        <br />
                        @Html.DisplayNameFor(model => model.Hasta):
                        @Html.DisplayFor(model => model.Hasta)

                    </p>

                    <h5>$@Html.DisplayFor(model => model.Recaudacion)</h5>

                </center>
            </div>
        </div>
    </div>


</div>    
    <div>
        <a asp-action="Index"><i class="fas fa-undo" aria-hidden="true"></i></a>
    </div>
