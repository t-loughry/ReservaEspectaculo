@model IEnumerable<ReservaEspectaculo.Models.Direccion>

@{
    ViewData["Title"] = "Index";
}

<h1>Direcciones</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Calle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Altura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Calle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Altura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DireccionId"><i class="fas fa-pen-square"></i></a> |
                <a asp-action="Details" asp-route-id="@item.DireccionId"><i class="fas fa-search"></i></a> @*|
                <a asp-action="Delete" asp-route-id="@item.DireccionId"><i class="fas fa-trash-alt"></i></a>*@
            </td>
        </tr>
}
    </tbody>
</table>
