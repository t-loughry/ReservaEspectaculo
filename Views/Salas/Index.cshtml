@model IEnumerable<ReservaEspectaculo.Models.Sala>

@{
    ViewData["Title"] = "Index";
}

<h1>Salas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoSala)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CapacidadButacas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoSala.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CapacidadButacas)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalaId"><i class="fas fa-pen-square"></i></a> |
                <a asp-action="Details" asp-route-id="@item.SalaId"><i class="fas fa-search"></i></a> 
                @*<a asp-action="Delete" asp-route-id="@item.SalaId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
